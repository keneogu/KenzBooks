<div class="w-auto flex justify-center items-center flex-col mt-5">
  <div class="comment-header">
    <p class="text-center text-gray-600">Comment: </p>
  </div>
  <%= form_with model: [ @article, @article.comments.build ] do |form| %>
      <%= form.text_area :content, class:"text-area h-24 rounded-xl mx-auto bg-white border-4 border-gray-600" %>
    </p>
    <p class="text-center cursor-pointer">
      <%= form.submit class:"bg-orange-600 text-slate-200 p-2 rounded-xl" %>
    </p>
  <% end %>
</div>
